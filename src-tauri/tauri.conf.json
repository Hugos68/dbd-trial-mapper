{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "DBD Trial Mapper",
	"version": "0.1.0",
	"identifier": "com.dbd-trial-mapper.app",
	"build": {
		"beforeDevCommand": "bun vite dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun vite build",
		"frontendDist": "../build"
	},
	"app": {
		"windows": [
			{
				"title": "DBD Trial Mapper",
				"label": "main",
				"width": 800,
				"height": 600,
				"center": true
			},
			{
				"label": "overlay",
				"url": "/overlay",
				"width": 400,
				"transparent": true,
				"resizable": false,
				"visible": false,
				"minimizable": false,
				"decorations": false,
				"closable": false,
				"alwaysOnTop": true,
				"contentProtected": true,
				"skipTaskbar": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"plugins": {
		"deep-link": {
			"desktop": {
				"schemes": ["dbd-trial-mapper"]
			}
		}
	}
}
