{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "dbd-trial-mapper",
  "version": "0.1.0",
  "identifier": "com.dbd-trial-mapper.app",   
  "build": {
    "beforeDevCommand": "bun run vite:dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run vite:build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "visible": false,
        "closable": false,
        "resizable": false,
        "minimizable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "contentProtected": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
