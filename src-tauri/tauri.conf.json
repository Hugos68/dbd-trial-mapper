{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "dbd-trial-mapper",
	"version": "0.1.0",
	"identifier": "com.dbd-trial-mapper.app",
	"build": {
		"beforeDevCommand": "bun vite dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun vite build",
		"frontendDist": "../build"
	},
	"app": {
		"windows": [
			{
				"title": "dbd-trial-mapper",
				"width": 800,
				"height": 600
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"plugins": {
		"deep-link": {
			"desktop": {
				"schemes": ["dbd-trial-mapper"]
			}
		}
	}
}
