{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "trial-sync",
	"version": "0.1.0",
	"identifier": "com.hugos68.trial-sync",
	"build": {
		"frontendDist": "../build",
		"devUrl": "http://localhost:5173",
		"beforeDevCommand": "bun vite dev",
		"beforeBuildCommand": "bun vite build"
	},
	"app": {
		"windows": [
			{
				"label": "default",
				"title": "Trial Sync",
				"url": "/",
				"visible": false,
				"width": 1280,
				"height": 720,
				"center": true,
				"decorations": false
			},
			{
				"label": "overlay",
				"title": "Trial Sync Overlay",
				"url": "/overlay",
				"visible": false,
				"shadow": false,
				"decorations": false,
				"alwaysOnTop": true,
				"transparent": true,
				"skipTaskbar": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
