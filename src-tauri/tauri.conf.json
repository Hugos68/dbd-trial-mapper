{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "TrialSync",
	"version": "0.1.0",
	"identifier": "com.trial-sync.app",
	"build": {
		"beforeDevCommand": "bun vite dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun vite build",
		"frontendDist": "../build"
	},
	"app": {
		"windows": [
			{
				"label": "main",
				"visible": false,
				"resizable": false,
				"maximizable": false,
				"minimizable": false,
				"fullscreen": false,
				"decorations": false,
				"closable": false,
				"transparent": true,
				"alwaysOnTop": true,
				"contentProtected": true,
				"skipTaskbar": true,
				"shadow": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
